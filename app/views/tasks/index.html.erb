<% @tasks.each do |task| %>
  <div class="inline">
    <span>
      <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
    </span>
    <span><a href=<%= "/tasks/#{task.id}" %>><%= task.title %></a></span>
    <span>
      <%= link_to task_path(task), method: :delete do%>
        <i class="fas fa-trash"></i>
      <% end %>
    </span>
  </div>
<% end %>
