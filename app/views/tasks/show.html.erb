<div class="header">
  <h1><%= @task.title %></h1>
  <a href=<%="/tasks/#{@task.id}/edit"%> >Edit this task</a>
</div>
<br>
<div class="description">
  <%= @task.details %>
</div>
<br>
<div>
  <a href="#">
    <% if @task.completed %>
      <i class="far fa-check-square"> This task is completed</i>
    <% else %>
      <i class="far fa-square"> Complete this task</i>
    <% end %>
  </a>
</div>
<br>
<br>
<%= link_to 'Back to the list', tasks_path  %>
